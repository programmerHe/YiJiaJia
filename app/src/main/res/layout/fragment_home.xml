<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/search_background_selector">

        <Button
            android:id="@+id/bt_position"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:text="火星兔子国 >"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/bt_position"
            android:background="@drawable/rect_rounded_left_right_arc" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/close" />
    </RelativeLayout>

    <!--广告框-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_ad"
            android:layout_width="match_parent"
            android:layout_height="120dp" />

        <com.henan.yijiajia.p_base.view.CircleIndicatorView
            android:id="@+id/civ_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            app:indicatorColor="#fff"
            app:indicatorSelectColor="#f00"
            app:indicatorDistance="8dp"
            app:indicatorRadius="6dp" />

    </RelativeLayout>

    <!--热门产品-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@mipmap/frist_temp" />

    <ListView
        android:id="@+id/lv_classes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="#00000000"
        android:dividerHeight="10dp">
    </ListView>
</LinearLayout>
