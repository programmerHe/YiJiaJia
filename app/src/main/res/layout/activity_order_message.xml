<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/search_background_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:text="订单详情"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:text="订单编号"
            android:textColor="#000"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_order_id"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:text="10010202565"
            android:textColor="#000"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:text="所在市区"
            android:textColor="#000"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_order_area"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:text="陕西省铜川市"
            android:textColor="#000"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:text="订单详情"
            android:textColor="#000"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_order_text"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:text="我们宿舍需要擦玻璃"
            android:textColor="#000"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:text="详细地址"
            android:textColor="#000"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_order_address"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:text="10010202565"
            android:textColor="#000"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="报价"
            android:textColor="#000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_money"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/edit_backgroud"
                android:maxLines="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="元"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginLeft="40dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/bt_receive"
            android:background="#FF6A6A"
            android:layout_width="100dp"
            android:text="接单"
            android:layout_height="50dp" />
        <Button
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:id="@+id/bt_refuse"
            android:background="#FF6A6A"
            android:layout_width="100dp"
            android:text="拒接"
            android:layout_height="50dp" />
    </RelativeLayout>
</LinearLayout>
